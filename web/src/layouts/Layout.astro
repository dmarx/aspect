# web/src/layouts/Layout.astro
---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-white">
    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>
  </body>
</html>
